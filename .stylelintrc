{
  "plugins": [
    "stylelint-scss"
  ],
  "extends": [
    "stylelint-config-recommended-scss",
    "stylelint-config-recess-order"
  ],
  "rules": {
    "indentation": [2, { "severity": "warning" } ],
    "no-empty-source": null,
    "block-no-empty": null,
  },
  "ignoreFiles": ["src/scss/foundation/*", "src/scss/vendor/*"],
}